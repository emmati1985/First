<mvc:View controllerName="SAPUI5.controller.HelloPanel" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
	<!--<Panel class="sapUiResponsiveMargin" headerText="{i18n>helloPanelTitle}" width="auto">-->
	<Panel class="sapUiResponsiveMargin" width="auto">
		<content>
			<Button class="myCustomButton" press="onShowHello" text="{i18n>showHelloButtonText}"/>
			<Button icon="sap-icon://world" class="sapUiSmallMarginEnd" press="onOpenDialog" text="{i18n>openDialogButtonText}"/>
			<Input value="{/recipient/name}" valueLiveUpdate="true" width="60%"/>
			<Text class="sapUiSmallMargin sapThemeHighlight-asColor myCustomText" text="Hello {/recipient/name}"/>
			<!--<Button class="myCustomButton" press="onShowHello" text="{i18n>showHelloButtonText}"/>-->
			<!--<Input value="{/recipient/name}" valueLiveUpdate="true" width="60%"/>-->
			<!--<Text class="sapUiSmallMargin sapThemeHighlight-asColor myCustomText" text="Hello now text {/recipient/name}"/>-->
		</content>
	</Panel>
</mvc:View>